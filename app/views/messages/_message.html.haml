.message(data-id='#{message.id}')
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url if message.image.url.present?