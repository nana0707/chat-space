.side-bar
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。

.chat-main
  .main-header
    .main-header__name
      %h2 test-group
      %p Member : testTaro Jiro Hanako 
    .main-header__edit-btn
      Edit  
  .messages  
    .message
      .message__upper-info
        %p.message__upper-info--talker
          testTaro
        %p.message__upper-info--date
          20xx/xx/xx(Mon) 00:00:00
      .message__text
        %p こんにちは！    

  %form.new-message
    .input-box
      %input.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}
      %label.input-box__image{for: "message-image"}
        %i.fa.fa-image 
    %input.submit-btn{type: "submit", value: "Send"}
